<% content_for :javascript do %>
  <script type="text/javascript">
      ShopifyApp.ready(function(){
          ShopifyApp.Bar.initialize({ title: "Home" });
      });
  </script>
<% end %>

<%= render 'shared/home_banner_section' %>

<section class="mt-5 mb-3">
  <div class="container">
    <%= flash_messages_for(@earning_rule) %>

    <div class="row align-items-center">
      <div class="col-6 mt-1">
        <h5 class="active-event-title">
          <%= t('earning_rule_page.table_heading.title') %>
        </h5>
      </div>

      <div class="col-6">
        <div class="mb-3">
          <%= link_to t('earning_rule_page.table_heading.button_labels.new'), new_earning_rule_path, class: 'btn btn-info btn-sm float-right ml-auto' %>
        </div>
      </div>
    </div>

    <br>

    <div class="row">
      <div class="col-md-12">
        <table class="table table-bordered table-hover">
          <thead>
            <tr>
              <th>Name</th>
              <th>Point</th>
              <th>Status</th>
              <th>Action</th>
            </tr>
          </thead>

          <tbody>
            <%= render @earning_rules %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>