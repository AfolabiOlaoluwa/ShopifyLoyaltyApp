  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <h4 class="active-event-title">
          <%= t('earning_rule_page.table_heading.title') %>
        </h4>
      </div>

      <div class="col-md-6">
        <div id="new-clock-entry">
          <%= link_to t('earning_rule_page.table_heading.button_labels.new'), new_earning_rule_path, remote: true, class: 'btn btn-info btn-sm float-right ml-auto' %>
