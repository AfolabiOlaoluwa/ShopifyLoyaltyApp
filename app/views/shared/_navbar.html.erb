<div class="d-flex p-3 px-md-4 mb-3">
  <ul class="navbar-nav flex-row ml-md-auto d-none d-md-flex">
    <% if user_signed_in? %>
      <div class="col-xs-6">
        <%= link_to current_user.email, edit_user_registration_path, class: "btn btn-sm btn-outline-info d-none d-lg-inline-block mb-3 mb-md-0 ml-md-3" %>
      </div>
      <div class="col-xs-6">
        <%= button_to "Logout", destroy_user_session_path, class: "btn btn-sm btn-outline-info d-none d-lg-inline-block mb-3 mb-md-0 ml-md-3", method: :delete %>
      </div>
    <% else %>
      <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-outline-primary" %>
      <%= link_to "Login", new_user_session_path, class: "btn btn-outline-primary" %>
    <% end %>
  </ul>
</div>