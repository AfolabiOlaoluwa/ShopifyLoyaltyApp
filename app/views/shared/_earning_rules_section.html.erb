<section class="mt-3">
  <div class="container">
    <div class="row">

      <h3 class="col-md-6 active-event-title">
        Earning Rules
        <%#= t('clock_entry_page.table_heading.title') %> <!-- create i18n for this -->
      </h3>

      <div class="col-md-6">
        <%= link_to 'Add Earning Rule', new_earning_rule_path, class: 'btn btn-primary btn-sm' %>
      </div>
    </div>

    <div class="row">
      <div class="container">
        <table class="table table-bordered table-hover" id="clock-entry">
          <thead>
          <tr>
            <th>Name</th>
            <th>Point</th>
            <th>Status</th>
            <th colspan="3"></th>
          </tr>
          </thead>

          <tbody>
          <%#= render @clock_entries %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>