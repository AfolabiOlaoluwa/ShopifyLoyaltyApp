<div class="container">
  <h1 class="active-event-title">
    <!--Table Title Here-->
    <%#= t('entry_details_page.table_heading.title') %>
  </h1>

  <table class="table table-bordered table-hover">
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Point Balance</th>
      </tr>
    </thead>

    <tbody>
      <%#= render @customer_details %>
      <% @customer_details.each do |u| %>
        <% present(u) do |customer_detail| %>
          <tr>
            <td><%= customer_detail.first_name %></td>
            <td><%= customer_detail.last_name %></td>
            <td><%= customer_detail.email %></td>
            <td><%= customer_detail.point_balance %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>

  <%#== pagy_bootstrap_nav(@pagy).html_safe %>
</div>